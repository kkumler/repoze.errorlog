<html tal:define="errors options/errors">
<head>
</head>
<body>

<span tal:condition="errors">
  <h1>Recent Errors</h1>
  
  <ul>
    
    <li tal:repeat="error errors">
      
      <b tal:content="error/time"/> <a href="#" tal:attributes="href error/url"
      tal:content="error/description">Description</a>
      
    </li>
    
  </ul>
</span>

<span tal:condition="not:errors">
  <h1>No errors since last restart</h1>
</span>

</body>
</html>
